{% extends 'base.html.twig' %}
{% block main %}
    {% for msg in app.session.flashbag.get('info') %}
        <div class="alert alert-danger">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">Ã—</a>
            {{ msg }}
        </div>
    {% endfor %}
    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" method="post">
                <fieldset>
                    <legend>Create repair service for {{ car.make }} {{ car.model }}</legend>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="repair_description">Problem description</label>
                        <div class="col-sm-4 ">
                            <input class="form-control" id="repair_description" name="repair[description]" required type="text">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="repair_report">Mechanics' report:</label>
                        <div class="col-sm-4 ">
                            <textarea class="form-control" id="repair_description" name="repair[report]"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('admin_view_profile', {'id': id}) }}">Cancel</a>
                            <button type="submit" class="btn btn-info">Create</button>
                        </div>
                    </div>

                    {{  form_row(form._token) }}
                </fieldset>
            </form>
        </div>
    </div>
{% endblock %}