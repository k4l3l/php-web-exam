{% extends 'base.html.twig' %}

{% block main %}
    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" method="post">
                <fieldset>
                    <legend>Edit repair service for {{ car.make }} {{ car.model }}</legend>
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">Archive this repair</button>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="repair_description">Problem description</label>
                        <div class="col-sm-4 ">
                            <input class="form-control" id="repair_description" name="repair[description]" value="{{ repair.description }}" required type="text">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="repair_report">Mechanics' report:</label>
                        <div class="col-sm-4 ">
                            <textarea class="form-control" id="repair_report" name="repair[report]">{{ repair.report }}</textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('admin_view_profile', {'id': id}) }}">Cancel</a>
                            <button type="submit" class="btn btn-info">Edit</button>
                        </div>
                    </div>

                    {{  form_row(form._token) }}
                </fieldset>
            </form>
            <!-- Modal -->
            <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLongTitle">Warning</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            Are you sure?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Back</button>
                            <a href="{{ path('repair_archive', {'carId': repair.car.id, 'id': repair.client.id, 'repairId': repair.id}) }}" class="btn btn-info">Yes</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

