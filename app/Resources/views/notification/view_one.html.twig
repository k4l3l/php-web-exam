{% extends 'base.html.twig' %}

{% block main %}
    <div class="container">
        <div class="bd-example">
            <p><b>Message from:</b><h4>{{ msg.repair.client.fullName }} (account: {{ msg.repair.client.email }})</h4></p>
            <p><b>About:</b><h4>{{ msg.repair.car.make }} {{ msg.repair.car.model }}, {{ msg.repair.description }}</h4></p>
            <p><b>Content:</b> <br/>{{ msg.content }}</p>
        </div>
        <a href="{{ path('view_notifications') }}" class="btn btn-primary">Back</a>
        <a href="{{ path('repair_edit', {'carId': msg.repair.car.id,'repairId': msg.repair.id, 'id': msg.repair.client.id}) }}" class="btn btn-primary">Edit repair</a>
    </div>
{% endblock %}

