{% extends 'base.html.twig' %}

{% block main %}
    <h5>Profile completion
        <i class="fas fa-info-circle" data-toggle="tooltip" data-placement="right" title="Fill your profile information"></i>
        <a href="{{ path('user_edit') }}">Edit</a></h5>
    <div class="progress" style="max-width: 15rem">
        <div class="progress-bar" role="progressbar" style="width: 75%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">75%</div>
    </div>
    <table class="table">
        <thead>
        <tr>
            <th scope="col" colspan="4">Profile information:</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <th scope="row">Email:</th>
            <td colspan="3">{{ user.email }}</td>
        </tr>
        <tr>
            <th scope="row">Full Name:</th>
            <td colspan="2">{{ user.fullName }}</td>
        </tr>
        <tr>
            <th scope="row">Phone:</th>
            <td colspan="2">{{ user.phone }}</td>
        </tr>
        {% if not is_granted("ROLE_ADMIN") %}
        <tr>
            <th scope="row">Repair services:</th>
            <td colspan="3">{% if repairs > 0 %}{{ repairs }} ({{ active }} active)
                    <a class="btn btn-primary" href="{{ path('repairs_view', {'id': user.id}) }}">View</a>
                {% else %}You currently have no repair services{% endif %}</td>
        </tr>
        </tbody>
    </table>
    <hr />
    <h4>Cars</h4>
    <hr />
    {% if user.cars is empty %}
        <h1>You have no cars</h1>
    {% endif %}
    <div class="card-group">
    {% for car in user.cars|reverse %}
        <div class="card" {% if car.isUpdated %}style="background: wheat" {% endif %}>
            <img class="card-img-top" src="
                        {% if car.image != null %}
                        {{ asset('uploads/images/cars/' ~ car.image) }}
                        {% else %}{{ asset('images/logo-cadetblue.jpg') }}
                        {% endif %}"
                 alt="Car image cap">
            <div class="card-body">
                <h5 class="card-title">{{ car.make }} {{ car.model }} <small>{{ car.year }}</small></h5>
                <small>
                    {% if car.activeRepair %}
                        Last updated: {{ car.activeRepair.dateModified|date('F j, H:i', 'Europe/Sofia') }}<br />
                        Price: {{ car.activeRepair.price }}
                    {% else %}
                        No active repairs
                    {% endif %}
                </small>
                <p class="card-text"><ul class="list-group">Engine:</ul>
                <li class="list-group-item">type: {{ car.engine.type }}</li>
                <li class="list-group-item">{{ car.engine.volume }}, {{ car.engine.power }} hp</li>
                {% if car.activeRepair %}
                <a href="{{ path('view_repair', {'carId': car.id, 'repairId': car.activeRepair.id }) }}" class="btn btn-primary">Check status</a>
                {% endif %}
                <a href="{{ path('car_edit', {'carId': car.id}) }}" class="btn btn-primary">Edit</a>
            </div>
        </div>
    {% endfor %}
    </div>
    {% endif %}
{% endblock %}

